@page "/dashboardadmin"
@using SpiritWeb.Client.Services
@using MudBlazor
@using SpiritWeb.Client.Models
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-6 mb-10" Style="overflow-y: auto; max-height: 800px">
    <MudGrid Justify="Justify.Center" Spacing="4">
        <!-- Titre du dashboard -->
        <MudItem xs="12">
            <MudPaper Class="pa-6 fade-in"
                      Style="@($"background: url('/images/AdminBanner.svg')center/cover no-repeat; border-radius: 16px; border: 2px solid {ColorConstant.colorBackgroundMallowBordure}; display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 200px; box-shadow: 0 4px 8px rgba(0,0,0,0.3);")">
                <MudText Typo="Typo.h3"
                         Class="mb-2"
                         Style="font-family: 'Press Start 2P', cursive; color: white; text-shadow: 2px 2px 4px rgba(0,0,0,0.8); letter-spacing: 1px;">
                    DASHBOARD ADMIN
                </MudText>               
            </MudPaper>
        </MudItem>

        <!-- Card Gestion Utilisateurs -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudLink Href="/users" Underline="Underline.None">
                <MudCard Class="dashboard-card">
                    <MudCardContent>
                        <div class="text-center">
                            <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
                            <MudText Typo="Typo.h6">Liste des utilisateurs</MudText>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudLink>
        </MudItem>

        <!-- Card Suggestions -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudLink Href="/suggestionList" Underline="Underline.None">
                <MudCard Class="dashboard-card">
                    <MudCardContent>
                        <div class="text-center">
                            <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Size="Size.Large" Color="Color.Info" Class="mb-3" />
                            <MudText Typo="Typo.h6">Liste des suggestions</MudText>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudLink>
        </MudItem>

        <!-- Card Statistiques -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudLink Href="/analytics" Underline="Underline.None">
                <MudCard Class="dashboard-card">
                    <MudCardContent>
                        <div class="text-center">
                            <MudIcon Icon="@Icons.Material.Filled.Analytics" Size="Size.Large" Color="Color.Warning" Class="mb-3" />
                            <MudText Typo="Typo.h6">Statistiques</MudText>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudLink>
        </MudItem>

        <!-- Card Paramètres -->
        <MudItem xs="12" sm="6" md="4" lg="3">
            <MudLink Href="/newsadmin" Underline="Underline.None">
                <MudCard Class="dashboard-card">
                    <MudCardContent>
                        <div class="text-center">
                            <MudIcon Icon="@Icons.Material.Filled.Settings" Size="Size.Large" Color="Color.Secondary" Class="mb-3" />
                            <MudText Typo="Typo.h6">Mise à jour des nouveautés</MudText>
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudLink>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .dashboard-card {
        height: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        background-color: @ColorConstant.colorBackgroundMallow90;
        border: 2px solid @ColorConstant.colorBackgroundMallowBordure;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            background-color: @ColorConstant.colorBackgroundMallowHover;
        }

    body {
        background-color: @ColorConstant.colorBackgroundMallow80;
    }
</style>

